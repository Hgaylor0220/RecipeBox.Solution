@model RecipeBox.Models.Recipe

<h4>Add a new recipe</h4>

@using (Html.BeginForm())
{
    <div class ="headline">
        <div class ="container">
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name)
            <br>
            @Html.LabelFor(model => model.Instructions)
            @Html.TextAreaFor(model => model.Instructions)
            <br>
            @Html.LabelFor(model => model.Ingredients)
            @Html.TextAreaFor(model => model.Ingredients)
            <br>
            @Html.Label("Select tag")
            @Html.DropDownList("TagId")
     <br>
        </div>
    </div>
    <br>

    <div class="container">
    <input type="submit" value="Add new item" class="btn btn-info" />
    </div>
}
<p>@Html.ActionLink("Show all recipes", "Index")</p>
   